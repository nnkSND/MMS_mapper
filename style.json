{
  "version": 8,
  "name": "Simple OSM",
  "sources": {
    "osm-tiles": {
      "type": "raster",
      "tiles": [
        "https://tile.openstreetmap.org/{z}/{x}/{y}.png"
      ],
      "minzoom": 1,
      "maxzoom": 22,
      "tileSize": 256,
      "attribution": "Â© <a href=\"https://www.openstreetmap.org/copyright\" target=\"_blank\">OpenStreetMap</a> contributors"
    },
    "kifuku-tiles": {
      "type": "raster",
      "tiles": [
        "pmtiles://https://nnkhij.github.io/NepalMMS/data/kifuku.pmtiles/{z}/{x}/{y}.png"
      ],
      "minzoom": 12,
      "maxzoom": 20,
      "tileSize": 256
    },
    "Higher-tiles": {
      "type": "raster",
      "tiles": [
        "pmtiles://https://nnkhij.github.io/NepalMMS/data/Higher.pmtiles/{z}/{x}/{y}.png"
      ],
      "minzoom": 12,
      "maxzoom": 20,
      "tileSize": 256
    },
    "Lower-tiles": {
      "type": "raster",
      "tiles": [
        "pmtiles://https://nnkhij.github.io/NepalMMS/data/Lower.pmtiles/{z}/{x}/{y}.png"
      ],
      "minzoom": 12,
      "maxzoom": 20,
      "tileSize": 256
    },
    "Intensity-tiles": {
      "type": "raster",
      "tiles": [
        "pmtiles://https://nnkhij.github.io/NepalMMS/data/Intensity.pmtiles/{z}/{x}/{y}.png"
      ],
      "minzoom": 12,
      "maxzoom": 20,
      "tileSize": 256
    },
    "trj-source": {
      "type": "vector",
      "tiles": [
        "pmtiles://https://nnkhij.github.io/NepalMMS/data/trj.pmtiles/{z}/{x}/{y}"
      ],
      "minzoom": 4,
      "maxzoom": 16
    }
  },
  "layers": [
    {
      "id": "osm-layer",
      "type": "raster",
      "source": "osm-tiles",
      "minzoom": 0,
      "maxzoom": 24,
      "paint": {
    "raster-brightness-min": 0,
    "raster-brightness-max": 0.5,
        "raster-saturation": -0.9
      }
    },
    {
      "id": "Intensity-layer",
      "type": "raster",
      "source": "Intensity-tiles",
      "minzoom": 0,
      "maxzoom": 24
    },
    {
      "id": "kifuku-layer",
      "type": "raster",
      "source": "kifuku-tiles",
      "minzoom": 0,
      "maxzoom": 24
    },
    {
      "id": "Lower-layer",
      "type": "raster",
      "source": "Lower-tiles",
      "minzoom": 0,
      "maxzoom": 24
    },
    {
      "id": "Higher-layer",
      "type": "raster",
      "source": "Higher-tiles",
      "minzoom": 0,
      "maxzoom": 24
    },
    {
      "id": "trj-layer",
      "type": "line",
      "source": "trj-source",
      "source-layer": "trj",
      "paint": {
       "line-color": [
         "match",
         ["%", ["to-number", ["slice", ["get", "ID"], -1]], 10],
         0, "#e41a1c",
         1, "#377eb8",
         2, "#4daf4a",
         3, "#984ea3",
         4, "#ff7f00",
         5, "#ffff33",
         6, "#a65628",
         7, "#f781bf",
         8, "#999999",
         9, "#1b9e77",
         "#cccccc"
       ],
      "line-width": [
        "interpolate",
        ["linear"],
        ["zoom"],
        10, 1,
        15, 3
      ]
     }
    }
  ]
}
